<% form_tag project_code_reviews_path(@project), :method => "get" do %>
	<strong>Please add the search parameters that you will like to use:</strong>
	<BR>
	<BR>
	<table>		
		<tbody>		
			<tr>
				<td>Module:</td>
				<td><%= select_tag(:search_module, options_for_select([["", ""]] + modules_select_options)) %></td>
				<td>Submitted by:</td>
				<td><%= text_field_tag :search_submitted_by %></td>
			</tr>
			<tr>
				<td>Description:</td>
				<td><%= text_field_tag :search_description %></td>
				<td>Owner:</td>
				<td><%= text_field_tag :search_owner %></td>
			</tr>
			<tr>
				<td>Ticket #:</td>
				<td><%= text_field_tag :search_ticket %></td>
				<td>Resolved: </td>
				<td><%= select_tag :search_resolved, options_for_select([["", nil], ["Yes", true], ["No", false]]) %></td>
			</tr>
			<tr>
				<td colspan="4" align="center">
					<%= submit_tag "Search", :name => nil%>
					&nbsp; 
					<input type="reset" value="Reset">
				</td>			
			</tr>
		</tbody>
	</table>
<% end %>

