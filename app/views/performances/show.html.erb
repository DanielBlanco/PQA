<% title "Show Performance" %>

<h2><%=h(yield :title)%></h2>

<%= flash_messages %>

<br/>

<div class="show-div">
  <table border="0" cellpadding="3" cellspacing="3">
    <%
    [["Test Description", @performance.description],
     ["URL/Component", @performance.url],
     ["Tester", @performance.tester],
     ["Environment", @performance.environment],
     ["Results/Comments", @performance.result]].each do |row| %>
      <tr>
        <th><%= h row[0] %></th>
        <td><%= wordwrap(h row[1]) %></td>
      </tr>
    <% end %>
    <tr>
      <th>Pass/Fail</th>
      <td><%= status_icon(@performance.pass) %></td>
    </tr>
    <tr>
      <td colspan="2">
        <%= link_to "Delete", [@project, @performance], :confirm => 'Are you sure?', :method => :delete %>
        |
        <%= link_to "Edit", edit_project_performance_path(@project, @performance) %>
        |
        <%= link_to 'View All', project_performances_path(@project) %>
      </td>
    </tr>
  </table>
</div>
