<% title "Project's List" %>

<h2><%=h(yield :title)%></h2>

<%= create_search (projects_path, :search_project_name, {:dlg_path => project_search_dlg_url}) %>



<% form_remote_for @project, :html => { :id => 'project_form' } do |f| %>
  <%= flash_messages %>
  <%= error_messages_for :project %>
  <br/>
  <%= will_paginate @projects %>
  <table cellpadding="3" cellspacing="0" border="0" align="center" class="list_table">
    <thead>
      <tr>
        <th width="50%">Project Name<%=req :class => 'required_iform'%></th>
        <th width="5%">Active</th>
        <th width="10%">Started On<%=req :class => 'required_iform'%></th>
        <th width="15%">Ticket</th>
        <th width="15%" colspan="3" align="center">Actions</th>
        <th width="5%">Export</th>
      </tr>
    <thead>
    <tbody id="projects">
      <%= render :partial => @projects %>
    </tbody>
    <tfoot>
      <%= render :partial => 'inline_form', :object => f %>
    </tfoot>
  </table>
<% end %>

<%= will_paginate @projects %>
